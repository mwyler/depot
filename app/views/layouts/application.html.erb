<!DOCTYPE html>
 <html>
 <head>
   <title>Pragprog Books Online Store</title>
   <%= stylesheet_link_tag "scaffold" %>
   <%= stylesheet_link_tag "depot", :media => "all" %>
   <%= javascript_include_tag :defaults %>
   <%= csrf_meta_tag %>
 </head>
 <body id="store" >
   <div id="banner" >
     <%= image_tag("logo.png") %>
     <%= @page_title || "Pragmatic Bookshelf" %>
     </div>
       <div id="columns" >
         <div id="side" >
           <% if @cart %>
              <%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
                  <%= render @cart %>
              <% end %>
           <% end %>
           <a href="../store/index" >Home</a><br />
           <a href="../store/index" >Questions</a><br />
           <a href="../store/index" >News</a><br />
           <a href="../store/index" >Contact</a><br />
       </div>
     <div id="main" >
      <%= yield %>
     </div>
   </div>
 </body>
 </html>